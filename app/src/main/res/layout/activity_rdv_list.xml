<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des Rendez-vous"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@android:color/black"/>

    <ListView
        android:id="@+id/lv_rendezvous"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_list_title"
        android:layout_above="@+id/btn_retour_menu"
        android:layout_marginTop="10dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />

    <Button
        android:id="@+id/btn_retour_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETOUR AU MENU"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#87CEEB"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>