<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include 
        android:id="@+id/userProfileHeader"
        layout="@layout/layout_user_profile_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/secretaire_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espace Secrétaire Médicale"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btn_gerer_rdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#87CEEB"
                android:text="GÉRER LES RENDEZ-VOUS" />

            <Button
                android:id="@+id/btn_gerer_profils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#87CEEB"
                android:text="GÉRER PROFILS ET DOSSIERS PATIENTS" />

            <Button
                android:id="@+id/btn_coordination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#87CEEB"
                android:text="COORDINATION ET PLANNINGS MÉDECINS" />

            <Button
                android:id="@+id/btn_urgent_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E74C3C"
                android:textColor="@android:color/white"
                android:text="MESSAGE URGENT" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>