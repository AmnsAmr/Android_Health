<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include 
            android:id="@+id/userProfileHeader"
            layout="@layout/layout_user_profile_header" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/cardDossier"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Dossier Médical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historique &amp; Résultats"
                    android:textColor="@color/Grey"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardRdv"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Rendez-vous"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planifier &amp; Gérer"
                    android:textColor="@color/Grey"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardMeds"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Médicaments"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordonnances"
                    android:textColor="@color/Grey"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardMessages"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Messages"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacter médecin"
                    android:textColor="@color/Grey"
                    android:textSize="11sp" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/tvNextRdvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Votre prochain RDV"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/cardRdvDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvNextApptDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Dr. Rachid Bennani"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvNextApptSpecialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cardiologue"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvNextApptDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lundi 02 Decembre 2028 - 14:30"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:id="@+id/btnEditRdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>